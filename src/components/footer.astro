    <!-- Digital Date/Time Display -->
    <div class="mt-1 md:mt-4 flex justify-center">
      <div id="datetime-display" class="digital-clock">
        <div class="digital-date">
          <span id="date-display"></span>
        </div>
        <div class="digital-time-container">
          <div class="digital-time" id="time-display"></div>
          <button id="time-format-toggle" class="time-toggle-btn" title="Toggle 12/24 hour format">

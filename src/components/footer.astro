      </p>
    </div>

    <style is:global>
      .digital-clock {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        background: #000000;
        border: 1px solid rgba(164, 118, 255, 0.2);
        border-radius: 8px;
        position: relative;
      }

      .digital-time-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
      }

      .digital-time {
        display: flex;
        align-items: center;
        gap: 0.8rem;
      }

      /* Seven-segment digit container */
      .clock-digit {
        position: relative;
        width: 50px;
        height: 80px;
        display: inline-block;
      }

      /* Individual segment styles */
      .clock-segment {
        position: absolute;
        background: #a476ff;
        transition: opacity 0.1s ease;
      }
      
      .clock-segment.active {
        opacity: 1;
        box-shadow: 
          0 0 10px #a476ff,
          0 0 20px #a476ff,
          0 0 30px rgba(164, 118, 255, 0.5);
      }
      
      .clock-segment.inactive {
        opacity: 0.05;
        background: rgba(164, 118, 255, 0.2);
        box-shadow: none;
      }

      /* Horizontal segments */
      .seg-a, .seg-d, .seg-g {
        height: 6px;
        width: 35px;
        left: 7.5px;
        clip-path: polygon(10% 0%, 90% 0%, 100% 50%, 90% 100%, 10% 100%, 0% 50%);
      }

      .seg-a { top: 0; }
      .seg-g { top: 37px; }
      .seg-d { bottom: 0; }

      /* Vertical segments */
      .seg-b, .seg-c, .seg-e, .seg-f {
        width: 6px;
        height: 32px;
        clip-path: polygon(50% 0%, 100% 10%, 100% 90%, 50% 100%, 0% 90%, 0% 10%);
      }

      .seg-b { top: 6px; right: 0; }
      .seg-c { bottom: 6px; right: 0; }
      .seg-e { bottom: 6px; left: 0; }
      .seg-f { top: 6px; left: 0; }

      /* Colon separator */
      .clock-colon {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 16px;
        height: 80px;
        margin: 0 0.3rem;
      }

      .clock-dot {
        width: 8px;
        height: 8px;
        background: #a476ff;
        border-radius: 50%;
        box-shadow: 
          0 0 10px #a476ff,
          0 0 20px #a476ff;
        animation: blink 1s infinite;
      }

      /* AM/PM indicator */
      .clock-ampm {
        display: flex;
        flex-direction: column;
        gap: 4px;
        margin-left: 1rem;
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.1em;
      }

      .ampm-text {
        color: rgba(164, 118, 255, 0.3);
        transition: all 0.3s ease;
      }

      .ampm-text.active {
        color: #a476ff;
        text-shadow: 
          0 0 10px #a476ff,
          0 0 20px rgba(164, 118, 255, 0.5);
      }

      @keyframes blink {
        0%, 50% { opacity: 1; }
        51%, 100% { opacity: 0.3; }
      }

      /* Responsive sizing */
      @media (max-width: 768px) {
        .digital-clock {
          padding: 0.75rem 1rem;
        }
        
        .digital-time {
          gap: 0.5rem;
        }
        
        .clock-digit {
          width: 28px;
          height: 45px;
        }

        .seg-a, .seg-d, .seg-g {
          height: 3.5px;
          width: 19px;
          left: 4.5px;
        }

        .seg-g { top: 20.75px; }

        .seg-b, .seg-c, .seg-e, .seg-f {
          width: 3.5px;
          height: 17.5px;
        }

        .seg-b { top: 3.5px; }
        .seg-c { bottom: 3.5px; }
        .seg-e { bottom: 3.5px; }
        .seg-f { top: 3.5px; }

        .clock-colon {
          height: 45px;
          gap: 10px;
          margin: 0 0.15rem;
        }

        .clock-dot {
          width: 5px;
          height: 5px;
        }

        .clock-ampm {
          font-size: 0.55rem;
          margin-left: 0.4rem;
          gap: 3px;
        }
      }

      /* Extra small screens */
      @media (max-width: 480px) {
        .digital-clock {
          padding: 0.6rem 0.8rem;
        }
        
        .digital-time {
          gap: 0.35rem;
        }
        
        .clock-digit {
          width: 22px;
          height: 36px;
        }

        .seg-a, .seg-d, .seg-g {
          height: 3px;
          width: 15px;
          left: 3.5px;
        }

        .seg-g { top: 16.5px; }

        .seg-b, .seg-c, .seg-e, .seg-f {
          width: 3px;
          height: 14px;
        }

        .seg-b { top: 3px; }
        .seg-c { bottom: 3px; }
        .seg-e { bottom: 3px; }
        .seg-f { top: 3px; }

        .clock-colon {
          height: 36px;
          gap: 8px;
          margin: 0 0.1rem;
        }

        .clock-dot {
          width: 4px;
          height: 4px;
        }

        .clock-ampm {
          font-size: 0.5rem;
          margin-left: 0.3rem;
          gap: 2px;
        }
      }
    </style>

    <script is:inline>
      (function() {
        // Seven-segment display mapping
        const segmentMap = {
          '0': ['a', 'b', 'c', 'd', 'e', 'f'],
          '1': ['b', 'c'],
          '2': ['a', 'b', 'd', 'e', 'g'],
          '3': ['a', 'b', 'c', 'd', 'g'],
          '4': ['b', 'c', 'f', 'g'],
          '5': ['a', 'c', 'd', 'f', 'g'],
          '6': ['a', 'c', 'd', 'e', 'f', 'g'],
          '7': ['a', 'b', 'c'],
          '8': ['a', 'b', 'c', 'd', 'e', 'f', 'g'],
          '9': ['a', 'b', 'c', 'd', 'f', 'g']
        };

        function createSegmentDigit(digit) {
          const segments = segmentMap[digit] || [];
          const allSegments = ['a', 'b', 'c', 'd', 'e', 'f', 'g'];
          
          let html = '<div class="clock-digit">';
          allSegments.forEach(seg => {
            const isActive = segments.includes(seg);
            const className = isActive ? 'active' : 'inactive';
            html += `<div class="clock-segment seg-${seg} ${className}"></div>`;
          });
          html += '</div>';
          
          return html;
        }

        function createColon() {
          return '<div class="clock-colon"><div class="clock-dot"></div><div class="clock-dot"></div></div>';
        }

        function updateDateTime() {
          const timeDisplay = document.getElementById('time-display');
          if (!timeDisplay) return;

          const now = new Date();
          let hours = now.getHours();
          const isPM = hours >= 12;
          
          // Convert to 12-hour format
          hours = hours % 12;
          hours = hours ? hours : 12; // 0 should be 12
          
          const hoursStr = String(hours).padStart(2, '0');
          const minutes = String(now.getMinutes()).padStart(2, '0');
          const seconds = String(now.getSeconds()).padStart(2, '0');
          
          let html = '';
          
          // Hours
          html += createSegmentDigit(hoursStr[0]);
          html += createSegmentDigit(hoursStr[1]);
          
          // Colon
          html += createColon();
          
          // Minutes
          html += createSegmentDigit(minutes[0]);
          html += createSegmentDigit(minutes[1]);
          
          // Colon
          html += createColon();
          
          // Seconds
          html += createSegmentDigit(seconds[0]);
          html += createSegmentDigit(seconds[1]);
          
          // AM/PM indicator
          html += `
            <div class="clock-ampm">
              <div class="ampm-text ${!isPM ? 'active' : ''}">AM</div>
              <div class="ampm-text ${isPM ? 'active' : ''}">PM</div>
            </div>
          `;
          
          timeDisplay.innerHTML = html;
        }
        
        // Initialize
        function initClock() {
          updateDateTime();
          setInterval(updateDateTime, 1000);
        }

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initClock);
        } else {
          initClock();
        }
      })();
    </script>
  </div>
</footer>
